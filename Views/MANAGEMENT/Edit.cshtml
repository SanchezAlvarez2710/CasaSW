@model CasaSW.Models.ViewModel.UserAdmin

@{
    CasaSW.Models.ViewModel.UserAdmin oUsuario;
    oUsuario = Model;
    ViewBag.Title = "Edit SAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <title>@ViewBag.Title </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="~/Content/register.css" rel="preload" as="style" />
    <link href="~/Content/register.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
</head>

<body>
    <main>
        <div class="container">

            <form class="forma" action="@Url.Action("Edit","MANAGEMENT")" method="post">

                <fieldset>
                    <legend>New SAC</legend>
                    <div class="contenedor">
                        <img src="/img/avatar1.png" name="cambio" alt="" style="width:50px; height:50px;">
                        <select name="avatar" onchange="if(document.images) document.images['cambio'].src='/img/avatar'+this.options[this.selectedIndex].value+'.png';">
                            <option value="1">Avatar1</option>
                            <option value="2">Avatar2</option>
                            <option value="3">Avatar3</option>
                            <option value="4">Avatar4</option>
                        </select>
                    </div>

                    <input type="text" required id="id" name="IdUsuario" class="form-control input_user" value="@oUsuario.IdUsuario" placeholder="id"> <br>
                    <input type="text" required id="name" name="name" class="form-control input_user" value="@oUsuario.name"placeholder="name"> <br>
                    <input type="email" required id="email" name="email" class="form-control input_user" value="@oUsuario.email"placeholder="email"> <br>
                    <input type="text" required id="username" name="Username" class="form-control input_user" value="@oUsuario.Username"placeholder="username"> <br>
                    <input type="password"  id="password" name="Password" class="form-control input_user" placeholder="password"> <br>
                    <input type="password"  id="confirmpassword" name="ConfirmarPassword" class="form-control input_user" placeholder="confirm password"> <br>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert" style="text-align:center;">
                            @ViewData["Mensaje"]
                        </div>
                    }

                    <button type="submit" id="crea" class="Edit">Edit SAC</button>


                </fieldset>
            </form>
        </div>
    </main>
</body>
</html>
