@model CasaSW.Models.ViewModel.UserAdmin

@{
    CasaSW.Models.ViewModel.UserAdmin oUsuario;
    oUsuario = Model;
    ViewBag.Title = "Edit SAC";
    ViewBag.Guide = "Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/registersac.css" />

<div class="form">
    <p class="guide">
        You are at > <a href="/HOME/Index">Home</a> > <a href="/MANAGEMENT/Index">Management</a> > <a href="#">Edit SAC</a>
    </p>
    <form action="@Url.Action("Edit","MANAGEMENT")" method="post" class="info-form">
        <fieldset>
            <legend>Edit SAC</legend>
            <div class="info-sac">
                <div class="avatar-slc">
                    <img src="~/img/avatar1.png" name="cambio" alt="" style="width:100px; height:100px;">
                    <select name="avatar" onchange="if(document.images) document.images['cambio'].src='~/img/avatar'+this.options[this.selectedIndex].value+'.png';">
                        <option value="1" selected>Avatar1</option>
                        <option value="2">Avatar2</option>
                        <option value="3">Avatar3</option>
                        <option value="4">Avatar4</option>
                    </select>
                </div>
                <div class="info-sac-content">
                    <label for="id">Identification</label>
                    <input type="text" readonly id="id" name="IdUsuario" value="@oUsuario.IdUsuario">
                    <label for="name">Name</label>
                    <input type="text" required id="name" name="name" value="@oUsuario.name" placeholder="Name">
                    <label for="email">Email</label>
                    <input type="email" required id="email" name="email" value="@oUsuario.email" placeholder="Email">
                    <label for="username">Username</label>
                    <input type="text" required id="username" name="Username" value="@oUsuario.Username" placeholder="Username">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="Password" placeholder="Fill only if you want to edit">
                </div>
                @if (ViewData["Mensaje"] != null)
                {
                    <div role="alert" style="text-align:center;">
                        @ViewData["Mensaje"]
                    </div>
                }
                <button type="submit" id="crea" class="edit">Edit SAC</button>
            </div>
        </fieldset>
    </form>
</div>


