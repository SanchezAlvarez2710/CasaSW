@{ 
CasaSW.Models.ViewModel.UserAdmin oUsuario;
oUsuario = (CasaSW.Models.ViewModel.UserAdmin)HttpContext.Current.Session["usuario"];
var condicion = oUsuario.Rol.ToLower();
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    @*<link rel="stylesheet" href="~/css/normalize.css" />*@
    <link rel="stylesheet" href="~/Content/stylesheet.css" />
</head>
<body>
    <div class="header">
        <div class="nav-tl">
            <div>
                <p>@ViewBag.Guide</p>
            </div>
            <label for="hamburger-mn" class="lbl-hm">
                <!-- label hamburger menu-->
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-menu-2" width="25"
                     height="25" viewBox="0 0 24 24" stroke-width="2" stroke="#939292" fill="none"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <line x1="4" y1="6" x2="20" y2="6" />
                    <line x1="4" y1="12" x2="20" y2="12" />
                    <line x1="4" y1="18" x2="20" y2="18" />
                </svg>
            </label>
            <input type="checkbox" id="hamburger-mn">
            <div class="bg-active">
            </div>
            <nav class="nav-pr">
                @{
                    @Html.ActionLink("Home", "Index", "HOME");
                    @Html.ActionLink("Request", "Index", "SW_REQUEST");
                    @Html.ActionLink("Customers", "Index", "CUSTOMERS");

                    @Html.ActionLink("Stock", "Stock", "HOME");                    
                    switch (condicion)
                    {
                        case "sac":
                            @Html.ActionLink("Support", "Index", "");
                            break;
                        case "admin":
                            @Html.ActionLink("Management", "Index", "MANAGEMENT");
                            break;
                    }
                }
            </nav>
            <div class="user-icon">
                <div>
                    <p>@oUsuario.Username</p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle" width="56"
                         height="56" viewBox="0 0 24 24" stroke-width="1.5" stroke="#bbbbbb" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <circle cx="12" cy="12" r="9" />
                        <circle cx="12" cy="10" r="3" />
                        <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
