@model IEnumerable<CasaSW.Models.UserPersona>

@{
    ViewBag.Title = "Customers Management";
    ViewBag.Guide = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Index_Person.css" />

<p class="guide">
    You are at > @Html.ActionLink("Home", "Index", "Home") > @Html.ActionLink("Customers", "Index", "PERSONAs")
</p>
<div class="form">

    <p>
        @Html.ActionLink("Create New User", "Create")
    </p>
    <table class="table">
        <tr class="header">
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                Name
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="tbl-body">
                <td>
                    @Html.DisplayFor(modelItem => item.Id_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_}) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_})
                </td>
            </tr>
        }
    </table>
</div>"
